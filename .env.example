# Database configurations using host.docker.internal
MONGODB_URI=mongodb://admin:password@host.docker.internal:27017/knowledge_platform?authSource=admin
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password
MONGODB_DATABASE=knowledge_platform

# Redis/DragonflyDB
REDIS_URL=redis://:password@host.docker.internal:6379/0
DRAGONFLYDB_PASSWORD=password

# MinIO Object Storage
MINIO_ENDPOINT=host.docker.internal:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_DEFAULT_BUCKETS=documents
MINIO_USE_SSL=false

# Neo4j Graph Database
NEO4J_URI=bolt://host.docker.internal:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# Qdrant Vector Database
QDRANT_URL=http://host.docker.internal:6333

# Consul Service Discovery
CONSUL_ADDRESS=host.docker.internal:8500
CONSUL_TOKEN=your-consul-token-here
CONSUL_DATACENTER=yoth

# Vault Secret Management
VAULT_ADDRESS=http://host.docker.internal:8200
VAULT_TOKEN=your-vault-token-here

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=3000
SERVER_UPLOAD_MAX_SIZE_MB=100